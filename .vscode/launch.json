{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/jankis-frontend/src",
            "runtimeExecutable": "/snap/chromium/current/usr/lib/chromium-browser/chrome"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}/jankis-frontend/src"
        },
        {
            "name": "Launch API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/JanKIS.API/bin/Debug/net5.0/JanKIS.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/JanKIS.API",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:44318"
            }
        },
        {
            "name": "Attach to API",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}